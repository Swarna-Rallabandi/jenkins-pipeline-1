pipeline {
    agent {
        label 'java-slave4'
    }
    stages{
        stage ('build'){
            steps {
                 retry(3){
                echo "welcome to jenkins pipeline"
                error "this is a failure"
}
echo "after 3 tries"
            }
        }
        stage ('scans') {
            steps {
                echo "executing sonar scans......"
            }
        }
    }
}
